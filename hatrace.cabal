name:                hatrace
version:             0.1.0.0
homepage:            https://gitlab.com/Norfair/hatrace#readme
license:             MIT
license-file:        LICENSE
author:              Tom Sydney Kerckhove, Niklas Hambüchen
maintainer:          syd.kerckhove@gmail.com
copyright:           Copyright: (c) 2016 Tom Sydney Kerckhove, Niklas Hambüchen
category:            System
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  c-sources:           cbits/fork-exec-ptrace.c
  exposed-modules:     HaTrace
  build-depends:       base >= 4.7 && < 5
                     , directory
                     , linux-ptrace
                     , posix-waitpid
                     , process
                     , unix
  ghc-options:         -Wall
  default-language:    Haskell2010

test-suite hatrace-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       HaTraceSpec
  build-depends:       base
                     , hatrace
                     , hspec
                     , process
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://gitlab.com/Norfair/hatrace
